    "version": "0.2.0",
    "configurations": [{
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'epsilon'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=epsilon",
                    "--package=epsilon"
                ],
                "filter": {
                    "name": "epsilon",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "LD_LIBRARY_PATH": "${workspaceFolder}/target/debug/deps:${env:HOME}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/lib",
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'epsilon'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=epsilon",
                    "--package=epsilon"
                ],
                "filter": {
                    "name": "epsilon",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "LD_LIBRARY_PATH": "${workspaceFolder}/target/debug/deps:${env:HOME}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/lib",
            }
        }
    ]
}